<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/first_layout_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_background_accueil"
    android:baselineAligned="false">

    <Button
        android:id="@+id/quit_button_id"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_button_quit" />

    <TextView
        android:id="@+id/touch_screen_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/touchScreen"
        android:textColor="#1d0bcc"
        android:textSize="25sp" />

</RelativeLayout>