<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_victory_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_backgound_victory">

    <ImageView
        android:id="@+id/image_id_victory"
        android:layout_width="@dimen/victory_image_size"
        android:layout_height="@dimen/victory_image_size"
        android:layout_centerInParent="true"
        android:contentDescription="@string/empty" />

    <Button
        android:id="@+id/victory_play_again"
        android:layout_width="@dimen/victory_button_size"
        android:layout_height="@dimen/victory_button_size"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="@dimen/victory_button_margin"
        android:layout_marginEnd="@dimen/victory_button_margin"
        android:layout_marginRight="@dimen/victory_button_margin"
        android:background="@drawable/custom_button_rejouer" />

    <Button
        android:id="@+id/victory_menu"
        android:layout_width="@dimen/victory_button_size"
        android:layout_height="@dimen/victory_button_size"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="@dimen/victory_button_margin"
        android:layout_marginStart="@dimen/victory_button_margin"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/victory_button_margin"
        android:background="@drawable/custom_button_menu" />

</RelativeLayout>